{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "no-console": 0,
    "no-param-reassign": [2, {
      "props": false
    }],
    "no-use-before-define": [2, {
      "functions": false,
      "classes": true
    }],
    "semi": [2, "always"],
    "quotes": [2, "single"]
  },
  "extends": "airbnb"
}
